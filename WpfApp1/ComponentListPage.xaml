<Window x:Class="MyApp.WPF.ComponentListPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:MyApp.WPF"  
        mc:Ignorable="d"
        d:DesignHeight="450" d:DesignWidth="800"
        Title="ComponentListPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            
        </Grid.RowDefinitions>

        <!-- Фильтры и поиск -->
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="Поиск:" Margin="5"/>
            <TextBox Width="150" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="Цена от:" Margin="5"/>
            <TextBox Width="80" Text="{Binding MinPrice, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="до:" Margin="5"/>
            <TextBox Width="80" Text="{Binding MaxPrice, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Content="Применить" Command="{Binding FilterCommand}" Margin="5"/>
            <!-- В ComponentListPage.xaml добавьте кнопку в StackPanel с фильтрами -->
            <Button Content="Добавить" Command="{Binding ShowAddWindowCommand}" Margin="5"/>
        </StackPanel>

        <!-- Список комплектующих -->
        <ListView Grid.Row="1" ItemsSource="{Binding Components}" Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Название" DisplayMemberBinding="{Binding Name}" Width="150"/>
                    <GridViewColumn Header="Описание" DisplayMemberBinding="{Binding Description}" Width="250"/>
                    <GridViewColumn Header="Цена" DisplayMemberBinding="{Binding Price}" Width="80"/>
                    <GridViewColumn Header="Категория" DisplayMemberBinding="{Binding Category.Name}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Пагинация -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Предыдущая" Command="{Binding PreviousPageCommand}" Margin="5" IsEnabled="{Binding HasPreviousPage}"/>
            <TextBlock Text="{Binding PageInfo}" VerticalAlignment="Center" Margin="5"/>
            <Button Content="Следующая" Command="{Binding NextPageCommand}" Margin="5" IsEnabled="{Binding HasNextPage}"/>
        </StackPanel>
    </Grid>
</Window>